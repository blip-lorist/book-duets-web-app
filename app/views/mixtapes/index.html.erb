<div class="row">
  <div class="col-sm-offset-2 col-sm-8">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3>Your Mixtapes
          <%= link_to new_mixtape_path do %>
            <i class="fa fa-plus-square"></i>
          <% end %>
        </h3>
      </div>
      <div class="panel-body">
          <% if @mixtapes.count == 0 %>
            <h4>You don't have any mixtapes yet! Better dust off some cassettes.</h4>
          <% else %>
            <ul>
              <% @mixtapes.each do |mixtape| %>
                <li><%= link_to mixtape.title, mixtape_path(mixtape) %></li>
              <% end %>
            </ul>
          <% end %>
      </div>
    </div>
  </div>
</div>
